#!/bin/zsh

zmodload zsh/zutil

function add-nix-forward() {
    setopt local_options err_return

    local -a arg_dest
    zparseopts -D -E -K \
        {d,-dest}:=arg_dest

    local dest_dir

    if [[ -n $arg_dest ]]; then
        dest="${XDG_CONFIG_HOME-${HOME}/.config}/$arg_dest[-1]"
    elif [[ -n "$NIX_SERVER_FORWARDING_PATH" ]]; then
        dest="$NIX_SERVER_FORWARDING_PATH"
    else
        printf '%s\n' \
            "Usage:" \
            "    add-nix-forward [[-d | --dest] <destination>] <commands>..." \
            >&2
        return 1
    fi

    if [[ ! -x "${dest_dir}/impl/forwarder" ]]; then
        printf 'Forwarder does not exist at %s\n' "$dest_dir" >&2
        return 1
    fi

    local to_forward
    for to_forward; do
        if [[ ! -e "${dest_dir}/${to_forward}" ]]; then
            ln -s "impl/forwarder" "${dest_dir}/${to_forward}"
        fi
    done
}

add-nix-forward "$@"
